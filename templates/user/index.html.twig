{% extends 'adminbase.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
 <section class="slider">
        <div class="container">
                <a href="{{ path('ajouter_admin')}}"><button type="button" class="btn btn-primary">Ajouter Autre Admin </button>
</a>
<br><br>
    <table class="table">
    
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>CIN</th>
                <th>Adress</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.CIN }}</td>
                <td>{{ user.adress }}</td>
                <td>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
</section>
{% endblock %}
