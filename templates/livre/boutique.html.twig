{% extends 'base.html.twig' %}

{% block title %}BookStore{% endblock %}

{% block body  %}
  <div class="breadcrumb">
        <div class="container">
            <a class="breadcrumb-item" href="index.html">Home</a>
            <span class="breadcrumb-item active">Products</span>
        </div>
    </div>
    <section class="static about-sec">
        <div class="container">
            
        
            <h2> Boutique</h2>
            <div class="recent-book-sec">
                <div class="row">
                {% for livre in livres %}
                    <div class="col-md-3">
                        <div class="item">
                        
                            <img src="images/{{livre.imageUrl}}" alt="img">
                            <h3>{{livre.titre}}</h3>
                            <h6><span class="price">{{livre.prix}}$</span> / <a href="{{ path('livre_show', {'id': livre.id})}}">Afficher</a></h6>
                        </div>
                    </div>
                {% endfor %}
                    
                   
                </div>
              
            </div>
        </div>
    </section>
{% endblock %}
