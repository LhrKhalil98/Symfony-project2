{% extends 'adminbase.html.twig' %}

{% block title %}Livres {% endblock %}

{% block body %}
 <section class="static about-sec">
               <div class="container">
                   <h1>Livres</h1>

      <a href="{{ path('livre_new')}}"><button type="button" class="btn btn-primary">Ajouter Autre Livre </button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Edition</th>
                <th>Num_edition</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livre in livres %}
            <tr>
                <td>{{ livre.id }}</td>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.edition }}</td>
                <td>{{ livre.numEdition }}</td>
                <td>{{ livre.prix }}</td>
                <td>
   
                <div class="row">
             <form method="post" action="{{ path('livre_delete', {'id': livre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
            <button class="btn btn-danger">Delete</button>
</form>


                    <a href="{{ path('livre_edit', {'id': livre.id}) }}"><button type="button" class="btn btn-info">Modifier</button></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div> 
</section>
{% endblock %}
