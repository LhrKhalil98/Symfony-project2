{% extends 'adminbase.html.twig' %}

{% block title %}Categorie {% endblock %}

{% block body %}
 <section class="static about-sec">
               <div class="container">
                   <h1>Categorie</h1>

      <a href="{{ path('categorie_new')}}"><button type="button" class="btn btn-primary">Ajouter Autre Categorie </button>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th colspan="2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nomCategorie}}</td>
                <td>
                <div class="row">
       <form method="post" action="{{ path('categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
    <button class="btn  btn-danger">Delete</button>
</form>

                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><button type="button" class="btn btn-info">Modifier</button></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div> 
</section>
{% endblock %}
